
SET(CJSON_SEARCH_PATH "${CMAKE_FIND_ROOT_PATH} ${CMAKE_INSTALL_PREFIX}")

FIND_PATH(CJSON_INCLUDE_DIR
  NAMES "cJSON.h"
  PATHS ${CJSON_SEARCH_PATH}
  PATH_SUFFIXES "cJSON" "include/cJSON" "usr/include/cJSON")

FIND_LIBRARY(CJSON_LIBRARY
  NAMES cJSON libcJSON
  PATHS ${CJSON_SEARCH_PATH})

FIND_LIBRARY(CJSONUTILS_LIBRARY
  NAMES cJSON_utils libcJSON_utils
  PATHS ${CJSON_SEARCH_PATH})

if(NOT CJSON_INCLUDE_DIRS)
  set(CJSON_INCLUDE_DIRS ${CJSON_INCLUDE_DIR})
endif(NOT CJSON_INCLUDE_DIRS)

if(NOT CJSON_LIBRARIES)
  set(CJSON_LIBRARIES ${CJSON_LIBRARY} ${CJSONUTILS})
endif(NOT CJSON_LIBRARIES)

INCLUDE(FindPackageHandleStandardArgs)
find_package_handle_standard_args(cjson DEFAULT_MSG
    CJSON_INCLUDE_DIRS
    CJSON_LIBRARIES)
